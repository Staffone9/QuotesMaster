<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/myLin1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.95">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/back_img"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:id="@+id/myLin3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quoteTxtVw"
                    android:text="Quote"
                    android:textSize="@dimen/quote_text"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/some_spacing"
                    android:layout_marginTop="@dimen/some_spacing"
                    android:layout_marginRight="@dimen/some_spacing"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/quoteAuthorTxtVw"
                    android:text="-Author"
                    android:textSize="@dimen/quote_author_text"
                    android:textColor="@android:color/white"
                    android:textStyle="italic"
                    android:gravity="center_vertical|end"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="@dimen/some_spacing"
                    android:layout_marginBottom="6dp"/>

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_weight="0.05"
            android:id="@+id/myLin4">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:id="@+id/like_unlike"
                android:src="@drawable/unlike"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_numbers"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/quote_author_text"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_text"
                android:text="Likes"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/quote_author_text"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:id="@+id/copyIcon"
                android:src="@drawable/copy_doc"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/copy_text"
                android:text="Copy Text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/quote_author_text"
                android:textColor="@android:color/black"/>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>