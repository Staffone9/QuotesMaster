<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/william"
            android:id="@+id/myImage"
            android:layout_margin="@dimen/card_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quoteTxtVw"
            android:layout_toRightOf="@+id/myImage"
            android:text="Quote"
            android:textSize="@dimen/quote_text"
            android:textColor="@android:color/black"
            android:gravity="left"
            android:layout_margin="@dimen/card_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quoteAuthorTxtVw"
            android:layout_toRightOf="@+id/myImage"
            android:layout_below="@+id/quoteTxtVw"
            android:text="-Author"
            android:textSize="@dimen/quote_author_text"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:gravity="center_horizontal|start"
            android:layout_margin="@dimen/card_margin"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:id="@+id/like_unlike"
            android:layout_below="@+id/quoteAuthorTxtVw"
            android:src="@drawable/unlike"
            android:layout_margin="@dimen/card_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:id="@+id/copyIcon"
            android:layout_below="@+id/quoteAuthorTxtVw"
            android:src="@drawable/copy_doc"
            android:layout_margin="@dimen/card_margin"
            android:layout_toLeftOf="@+id/like_unlike"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>